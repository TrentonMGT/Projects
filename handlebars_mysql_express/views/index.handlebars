<h1>Movies To Watch</h1>
<ul>
{{#each movies}}
	<li>
		<p>{{this.id}}. {{this.movies}}</p>
    <form action="/{{this.id}}?_method=DELETE" method="POST">
      <input type="hidden" name="id" value="{{this.id}}">
      <button type="submit">Delete</button>
    </form>
	</li>
{{/each}}
</ul>

<h2>Add A Movie Bro</h2>
<form method="POST" action="/create">
	<textarea type="text" name="movies" cols="30" rows="5"></textarea>
	</br>
	</br>
	<button type="submit">SAVE MOVIE</button>
</form>

<h2>Update a Movie</h2>
<form method="POST" action="/update?_method=PUT">
  <input type="text" name="id" placeholder="id">
  </br>
  </br>
	<textarea type="text" name="movies" id="" cols="30" rows="5" placeholder="Update a movie Bro"></textarea>
	</br>
	</br> 
	<button type="submit">UPDATE MOVIE</button>
</form>